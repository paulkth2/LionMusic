<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="5pt"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerArtist"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="9.2"
            android:text="Artist"
            android:clickable="true"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            />
        <ToggleButton
            android:id="@+id/likeArtistButton"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.8"
            android:background="@drawable/like_button"
            android:textOff=""
            android:textOn=""/>

    </LinearLayout>


    <TextView
        android:id="@+id/playerSongTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Song Title"
        android:fontFamily="@font/quicksand_bold"
        android:clickable="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/albumArt"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/default_album_art"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="0:30"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/rewindBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rewindbackwardbutton"/>

        <ToggleButton
            android:id="@+id/playToggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/check"/>

        <ImageButton
            android:id="@+id/rewindForwardButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rewindforwardbutton"/>
    </LinearLayout>
</LinearLayout>